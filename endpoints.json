{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "hereessss Johnny",
          "name": "phillip",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }
      ]
    }
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 34,
          "topic": "cooking",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 14,
          "comment_count": 13
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an an object for the given article_id",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": "brad",
          "title": "Damn it's hot",
          "topic": "ovens",
          "author": "Paul",
          "body": "that's nice",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 42,
          "comment_count": "13"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 7,
          "votes": 20,
          "created_at": "2020-07-09T20:11:00.000Z",
          "author": "butter_bridge",
          "body": "that's nice"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "creates a new comment for the given article_id",
    "exampleAcceptedBody": {
      "body": "New comment",
      "username": "butter_bridge"
    },
    "exampleResponse": {
      "article": [
        {
          "comment_id": 19,
          "votes": 0,
          "created_at": "2020-07-09T20:11:00.000Z",
          "author": "butter_bridge",
          "body": "New comment",
          "article_id": 2
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates the votes property for the given article_id",
    "exampleAcceptedBody": {
      "inc_votes": 1
    },
    "exampleAcceptedBody2": {
      "inc_votes": -5
    },
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 110,
          "comment_count": "15"
        }
      ]
    }
  }
}
